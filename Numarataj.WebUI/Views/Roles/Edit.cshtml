@model AppRole
@{
    ViewData["Title"] = "Rol Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Rol Düzenle</h2>
<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input name="Id" type="hidden" value="@Model.Id" />
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">
        <i class="bi bi-check-circle"></i> Kaydet
    </button>
</form>
<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th style="width:80px;"></th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.Users != null)
        {
            @if (ViewBag.Users.Count == 0)
            {
                <tr><td colspan="4" class="text-center">User Yok</td></tr>
            }
            @foreach (var user in ViewBag.Users)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-outline-primary btn-sm">Düzenle </a>

                    </td>
                </tr>
            }

        }
    </tbody>
</table>