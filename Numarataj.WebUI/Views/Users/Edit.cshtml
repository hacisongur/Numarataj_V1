@model EditViewModel
@{
    ViewData["Title"] = "Kullanıcı Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" integrity="sha384-S1kApPCojUnrJzH1HDAq82R8Wn+rPgoSlSQW5+e5ftlHqvCymLai3xiAVO0EczxA" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <title>Düzenle</title>
</head>
<body>
    <div class="container">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input name="Id" type="hidden" value="@Model.Id" />
            <div class="mb-3">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="card-header">
                        Parola Güncelle
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="card-header">
                        Roller
                    </div>
                    <div class="card-body">
                        @foreach (var role in ViewBag.Roles)
                        {
                            <div class="form-check">
                                <input type="checkbox"
                                       class="form-check-input"
                                       name="SelectedRoles" value="@role"
                                       id="@role"
                                @if (Model.SelectedRoles != null)
                                {
                                    @(Model.SelectedRoles.Any(i => i == role) ? "checked" : "")
                                } />
                                <label for="@role" class="form-check-label">@role</label>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <hr />
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-circle"></i> Kaydet
            </button>
        </form>
    </div>
</body>
</html>
