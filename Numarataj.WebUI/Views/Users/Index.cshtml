@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "Kullanıcı Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<a class="btn btn-outline-success " asp-action="Create"> Kullanıcı Ekle</a>
<hr />
<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th style="width:125px;"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="4" class="text-center">User Yok</td></tr>
        }
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-outline-primary btn-sm">Düzenle </a>
                    <form asp-action="Delete" method="post" onsubmit="return confirm('emin misiniz')" style="display:inline-block;">
                        <input type="hidden" value="@user.Id" name="id" />
                        <button type="submit" class="btn btn-outline-danger btn-sm">Sil </button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>
